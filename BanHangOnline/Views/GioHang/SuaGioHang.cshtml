@using BanHangOnline.Models
@model List<GioHang>
@{
    ViewBag.Title = "SuaGioHang";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
<h2 class="mb25">Sửa giỏ hàng</h2>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Tên Bánh</th>
            <th scope="col">Hình ảnh</</th>

            <th scope="col">Đơn giá</th>
            <th scope="col">Số lượng</th>

            <th scope="col">Thành tiền</th>
         
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.name_product</td>
            <td><img src="@Url.Content("~/image/product/" + item.image)" width="50px" height="50px" /></td>

            <td>@String.Format("{0:0,0}", item.unit_price.ToString()) VNĐ</td>
                @using (Html.BeginForm("CapNhapGioHang", "GioHang", new { @id_product = item.id_product }))
                {

                <td>@Html.TextBox("txtSoLuong", item.quantity)</td>

                <td>@String.Format("{0:0,0}", item.TongTien.ToString()) VNĐ</td>
                <td><input type="submit" value="Cập nhập" /></td>
                }
            </tr>
        }

        </tbody>
</table>
